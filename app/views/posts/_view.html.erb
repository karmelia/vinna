<div class="bs-docs-featurette">
  <div class="container">
     <h2 class="bs-docs-featurette-title">What's new?</h2>
    <div class="row bs-docs-featured-sites">
      <div class="blog-posts">
        	<% @posts.each do |post| %>
        		<ul>
        			<li><em><strong><%= link_to (post.title), view_blog_path(post) %></strong></em><br>
               <%= post.text %></li>
        		</ul>
        	<% end %>
      </div>
    </div>
  </div>
</div>