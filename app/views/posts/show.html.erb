<div class="Purple">
	<div class="bs-docs-featurette">

	<%= link_to image_tag(@post.image.url(:large)), @post.image.url %>

		<h1><%= @post.title %></h1>

		<p><%= @post.text %></p>

		<h2>Comments: </h2>
		<ul>
			<% @post.comments.each do |comment| %>
				<li>Commenter <em><strong><%= comment.author_name %></strong></em> says:<br>
				<%= comment.body %></li>
				<% if current_user.admin? %>
					<%= link_to "Delete this comment", [comment.post, comment], 
					method: :delete,
					data: { confirm: "Are you sure?" } %>
									<% end %>
			<% end %>
		</ul>

		<% if current_user.general?  %>
			<h2>Add your comment:</h2>
				<%= form_for([@post, @post.comments.build]) do |f| %>
					<p><%= f.label :author_name %><p>
					<p style="color:black"><%= f.text_field :author_name, :value => "#{current_user.email}" %></p>

					<p><%= f.label :body %></p>
					<p style="color:black"><%= f.text_area :body %></p>
 
					<p style="color:black"><%= f.submit "Post comment" %></p>
			<% end %>
		<% end %>

		<% if current_user.admin? %>
			<h2>Add your comment:</h2>
				<%= form_for([@post, @post.comments.build]) do |f| %>
					<p><%= f.label :author_name %><p>
					<p style="color:black"><%= f.text_field :author_name, :value => "#{current_user.email}" %></p>

					<p><%= f.label :body %></p>
					<p style="color:black"><%= f.text_area :body %></p>
		
					<p style="color:black"><%= f.submit "Post comment" %></p>
			<% end %>
			<h2>Admin Controls:</h2>
			<%= link_to 'Edit Post', edit_post_path(@post) %> | <%= link_to 'Delete Post', post_path(@post),
        			              method: :delete,
        			              data: { confirm: 'Are you sure?' } %></li>
  	<% end %>

	</div>	
</div>