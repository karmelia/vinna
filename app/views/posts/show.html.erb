<div class="Purple">
	<div class="bs-docs-featurette">

	<%= link_to image_tag(@post.image.url(:large)), @post.image.url %>

		<h1><%= @post.title %></h1>

		<p><%= @post.text %></p>

		<% if current_user.admin? %>
			<%= link_to 'Home', posts_path %> | <%= link_to 'Edit', edit_post_path(@post) %> | <%= link_to 'Delete', post_path(@post),
        			              method: :delete,
        			              data: { confirm: 'Are you sure?' } %></li>
  	<% end %>
	</div>	
</div>