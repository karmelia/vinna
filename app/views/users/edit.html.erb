<div class="user_log_in">
	<h1>Change your password</h1>
		<%= form_for(@user) do |f| %>
		 <ul>
		  <li><%= f.label :email %><br>
		      <%= f.email_field :email %></li>

		  <li><%= f.label :password %><br>
		      <%= f.password_field :password %></li>

		  <li><%= f.label :password_confirmation, "Confirmation" %><br>
		      <%= f.password_field :password_confirmation %></li>

		  <li><%= f.submit "Save changes" %></li>
		</ul>
	<% end %>
</div>	