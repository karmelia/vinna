<h1>Sign up!</h1>
<%= form_for User.new do |f| %>
	<ul>
		<li><%= f.label :email %><br>
		<%= f.text_field :email %></li>

		<li><%= f.label :password %><br>
		<%= f.password_field :password %></li>

		<li><%= f.label :password_confirmation %><br>
		<%= f.password_field :password_confirmation %></li>

		<li><%= f.submit "Sign up" %></li>
	</ul>
<% end %>